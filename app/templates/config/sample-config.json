{
  "appServiceName": "<%= name %>-service",
  "maxSockets": 500,
  "cluster": false,
  "processes": 0,
  "environment": "development",
  <%_ if (auth) { _%>"jwtPublicCert": "./config/service.pub",<%_ } _%>
  "logPath": "",
  "logRequestHeader": true,
  "logOutboundRequest": true,
  "logglyConfig": {
    "token": "",
    "subdomain": "<%= name %>"
  },
  "hydra": {
    "serviceName": "<%= name %>-service",
    "serviceIP": "<%= ip %>",
    "servicePort": <%= port %>,
    "serviceType": "<%= name %>",
    "serviceDescription": "<%= purpose %>",
    "redis": {
      "url": "127.0.0.1",
      "port": 6379,
      "db": 15
    }
  }
}
