{
  "environment": "development",
  <%_ if (auth) { _%>"jwtPublicCert": "./config/service.pub",<%_ } _%>
  <%_ if (logging) { _%>
  "logger": {
    "logRequests": true,
    "elasticsearch": {
      "host": "localhost",
      "port": 9200
    }
  },
  <%_ } _%>
  "hydra": {
    "serviceName": "<%= name %>-service",
    "serviceIP": "<%= ip %>",
    "servicePort": <%= port %>,
    "serviceType": "<%= name %>",
    "serviceDescription": "<%= purpose %>",
    "redis": {
      "url": "127.0.0.1",
      "port": 6379,
      "db": 15
    }
  }
}
